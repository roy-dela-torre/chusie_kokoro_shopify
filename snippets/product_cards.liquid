<div class="product_content position-relative" type="button" onclick="{{ product.url | within: collection }}">
    {% if product.featured_image %}
      {% render 'image',
        image: product.featured_image,
        width: 400,
        height: 400,
        crop: 'center'
      %}
    {% endif %}
  <div class="product_main_content">
    <h3 class="product_title">{{ product.title }}</h3>
    <div class="product_price">
      {% if product.compare_at_price > product.price %}
        <span class="sale_price">{{ product.price | money }}</span>
        <span class="original_price"
          ><s>{{ product.compare_at_price | money }}</s></span
        >
      {% else %}
        <span class="regular_price">{{ product.price | money }}</span>
      {% endif %}
    </div>
  </div>
</div>
<style>
  section img {
    height: 146px;
    object-fit: contain;
  }

  section .image {
    height: 250px;
    border-radius: 4px;
    background: var(--Secondary, #f5f5f5);
    padding: 30px;
    margin-bottom: 16px;
  }

  section span.sale_price {
    color: var(--Secondary-2, #db4444);
    font-family: 'Poppins', sans-serif;
    font-size: 16px;
    font-style: normal;
    font-weight: 500;
    line-height: 24px;
  }

  section span.regular_price {
    color: var(--Secondary-3, #9b9b9b);
    font-family: 'Poppins', sans-serif;
    font-size: 16px;
    font-style: normal;
    font-weight: 500;
    line-height: 24px;
    text-decoration-line: line-through;
  }

  section .product_price {
    display: flex;
    align-items: center;
    gap: 0 10px;
  }
</style>
